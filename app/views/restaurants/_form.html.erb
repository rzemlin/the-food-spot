
<%= form_for @restaurant do |f| %>
    <%= f.label :restaurant_name.to_s+": ", class: "form_label" %>
    <%= f.text_field :restaurant_name %>
    <br>
    <br>
    <%= f.label :address.to_s+": ", class: "form_label"  %>
    <%= f.text_field :address %>
    <br>
    <br>
    <%= f.label :city.to_s+": ", class: "form_label"  %>
    <%= f.text_field :city%>
    <br>
    <br>
    <%= f.label :state.to_s+": ", class: "form_label"  %>
    <%= f.text_field :state %>
    <br>
    <br>
    <%= f.label :cuisine, "Choose a Cuisine: ", class: "form_label"  %>
    <%= f.collection_select :cuisine_id, Cuisine.all, :id, :name, prompt: true, :selected => @restaurant.cuisine_id %>
    <br>
    <br>
    <%= f.submit nil, class: "btn btn-outline-secondary" %>
    <br>
<% end %>