<div class="container text-center">
<h1 class="underlined">Sign up as a new user</h1>
<br>
<%= render partial: 'layouts/error_messages', locals: {instance: @user} %>
<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
        <br><br>
    <%= f.label :email %>
    <%= f.email_field :email %> <!-- #gives automatic validations -->
        <br><br>
    <%= f.label :password %>
    <%= f.password_field :password %>
        <br><br>
    <%= f.submit "Sign Up", class: "btn btn-outline-secondary" %>
<% end %>
    <br><br><br>
<h4>If you already have an account, please log in:</h4>
    <%= button_to "Log In", login_path, :method => :get, class: "btn btn-outline-secondary" %>
</div>
