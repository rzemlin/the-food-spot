<div class="container text-center">
<h1 class="underlined">Log in:</h1>

<p><%= flash[:error] %></p>
<br>
<%= form_for :user do |f| %>                                   
    <%= f.label :email, class: "form_label" %>       
    <%= f.email_field :email %> 
    <br>
    <br>
    <%= f.label :password, class: "form_label" %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Log In" %>
<% end %>
<br>
<br>
<%= link_to 'Sign Up with Google!', '/auth/google_oauth2', method: :post %>
<br>
<br>
<%= link_to "Sign Up", 'users/new'  %>

</div>