<%= form_for @review do |f| %>
    <br>
    <%= f.label "Rating : ", class: "form_label" %>&nbsp;&nbsp;
       <%= f.radio_button :rating, "1"  %> 1
       <%= f.radio_button :rating, "2"  %> 2
       <%= f.radio_button :rating, "3"  %> 3
       <%= f.radio_button :rating, "4"  %> 4
       <%= f.radio_button :rating, "5"  %> 5
    <br>
    <br>
    <%= f.label :content, "Description: ", class: "form_label" %>
    <br>
    <%= f.text_area :content, size: "25x4" %>
    <br>
    <br>
    <%= f.hidden_field :restaurant_id %>
    <br>
    <br>
    <%= f.submit nil, class: "btn btn-outline-secondary" %>
<% end %>